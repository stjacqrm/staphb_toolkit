trimmomatic_container = 'staphb/trimmomatic:0.39'
bbtools_container = 'staphb/bbtools:38.76'
fastqc_container = 'staphb/fastqc:0.11.8'
unicycler_container = 'staphb/unicycler:0.4.7'
vibrant_container = 'staphb/vibrant:1.2.1'
abricate_container = 'staphb/abricate:1.0.0'
mlst_container = 'staphb/mlst:2.17.6-cv1'
porechop_container = 'biocontainers/porechop:v0.2.4dfsg-1-deb_cv1'

//#####################
//###Pipeline Params###
//#####################

//starting parameters
params.reads = ""
params.metadata = ""
params.nanopore_reads =  ""
params.outdir = ""


//PreProcessing
params.name_split_on=""

//Trimming
params.minlength=75
params.windowsize=4
params.qualitytrimscore=30
params.savetrimmedreads=false


process {

  cpus = 2
  memory = '2 GB'

  withName:preProcess{
    container = fastqc_container
  }
  withName:trim{
    cpus = 4
    memory = '8 GB'
    container = trimmomatic_container
  }
  withName:cleanreads{
    cpus = 4
    memory = '8 GB'
    container = bbtools_container
  }
  withName:fastqc{
    container = fastqc_container
  }
  withName:unicycler{
    cpus = 8
    memory = '15 GB'
    container = unicycler_container
  }
  withName:prophage{
    cpus = 8
    memory = '15 GB'
    container = vibrant_container
  }
  withName:abricate{
    cpus = 8
    memory = '15 GB'
    container = amrfinder_container
  }
  withName:mlst{
    cpus = 8
    memory = '15 GB'
    container = mlst_container
  }
  withName:porechop{
    cpus = 8
    memory = '15 GB'
    container = porechop_container
  }
}
